code = "shader_type canvas_item;

uniform float threshold = 0.2;
uniform float aspect_ratio = 1.778;

void fragment(){

	float n_x = aspect_ratio*(UV.x - 0.5);
	float n_y = (UV.y - 0.5); 
	float radius_from_center = sqrt(n_x*n_x + n_y*n_y);

	if (radius_from_center < threshold){
		COLOR.a = 0.0;
	}
}"

